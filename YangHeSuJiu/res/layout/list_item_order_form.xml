<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_gray_white_selector"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:padding="5dp" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <RelativeLayout
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:background="@drawable/tab_down_frame_gray" >

            <ImageView
                android:id="@+id/item_business_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:paddingTop="3dp" >
		<CheckBox android:id="@+id/item_select_checkBox"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="12dp"
	        android:button="@drawable/checkbox_bule_selector"
	        android:layout_alignParentRight="true"/>
            <Button
                android:id="@+id/item_order_Button"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/list_item_btn_order_selector"
                android:focusable="false"
                android:text="下单"
                android:textColor="@color/drink_list_one"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" /> <!-- android:text="洋河蓝色经典M6" -->

            <LinearLayout
                android:id="@+id/item_price_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_title"
                android:layout_marginTop="8dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/item_price"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/price_color"
                    android:textSize="15sp" /> <!-- android:text="¥76699" -->

                <TextView
                    android:id="@+id/item_discount"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:background="@color/drink_list_two"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="13sp" /> <!-- android:text="八折优惠" -->
            </LinearLayout>

            <TextView
                android:id="@+id/item_integral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_price_layout"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textSize="14sp" /> <!-- android:text="会员购买可获766积分" -->
        </RelativeLayout>
    </LinearLayout>
    
